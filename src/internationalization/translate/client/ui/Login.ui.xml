<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		
		<g:VerticalPanel>
			<g:Label text="Sign in to start"/>
		</g:VerticalPanel>
		<g:Image url="thelens/images/google-openid-logo.png" width="257px" height="114px"/>
		<g:Grid>
			<g:row>
				<g:customCell>
					<g:Label text="User Name:"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="tbUserName" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Password:"/>
				</g:customCell>
				<g:customCell>
					<g:PasswordTextBox ui:field="tbPassword"/>
				</g:customCell>
			</g:row>
			<g:row/>
			<g:row>
				<g:customCell>
				<g:Label text=""/>
				</g:customCell>
				<g:customCell>
					<g:Button width="68px" text="Sign In" ui:field="button"/>
				</g:customCell>
			</g:row>
		</g:Grid>

		
	</g:HTMLPanel>
</ui:UiBinder> 